@{
    ViewBag.Title = "List Elections";
}

<div class="container py-5">
    <h2 class="text-center mb-4">List of Created Elections</h2>
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Election Title</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var election in Model)
                {
                    <tr>
                        <td>@election.Title</td>
                        <td>@election.StartDate.ToShortDateString()</td>
                        <td>@election.EndDate.ToShortDateString()</td>
                        <td>
                            <a href="/Admin/EditElection/@election.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/Admin/DeleteElection/@election.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this election?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No elections have been created yet.
            <a href="/Admin/CreateElection" class="btn btn-link">Create one now!</a>
        </div>
    }
</div>

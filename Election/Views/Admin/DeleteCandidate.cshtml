@model Candidate

<style>
    .navbar {
        background-color: var(--primary);
    }
</style>
<nav class="navbar">
    <div class="navbar-left">
        <a class="navbar-brand" href="/">
            <span>EasyVote</span>
        </a>
    </div>
    <div class="navbar-toggle" id="navbar-toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
    <ul class="navbar-menu" id="navbar-menu">
        <li class="navbar-item"><a href="/Admin/AdminDashBoard">DashBoard</a></li>
        <li class="navbar-item"><a href="/Account/Login">Logout</a></li>
    </ul>
</nav>
<script>
    // Toggle Navbar Menu
    document.getElementById('navbar-toggle').addEventListener('click', () => {
        const menu = document.getElementById('navbar-menu');
        menu.classList.toggle('active');
    });
</script>
<div class="container mt-4">
    <h2 style="text-align:center;">Delete Candidate</h2>

    <div class="card mx-auto" style="max-width: 400px;">
        <!-- Added max-width and centered the card -->
        <div class="card-body text-center">
            <img src="@Model.PhotoPath" alt="@Model.Name's photo" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;" /> <!-- Reduced image size -->
            <h5>@Model.Name</h5>
            <p><strong>Party:</strong> @Model.Party</p>
            <p><strong>Position:</strong> @Model.Position</p>
            <p>@Model.Description</p>
        </div>
    </div>

    <form asp-action="DeleteCandidateConfirmed" method="post" class="text-center mt-3">
        <input type="hidden" asp-for="Id" />
        <p>Are you sure you want to delete this candidate?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageCandidates" class="btn btn-secondary">Cancel</a>
    </form>
</div>


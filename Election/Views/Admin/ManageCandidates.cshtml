 @model IEnumerable<Candidate>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

<style>
    .navbar {
        background-color: var(--primary);
    }

    .card {
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-header img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .card-body {
        text-align: center;
        flex-grow: 1; /* Ensures the body takes up remaining space */
    }

        .card-body h5 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .card-body p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 15px;
            max-height: 80px; /* Control max height for text */
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Clamp text to 3 lines */
            -webkit-box-orient: vertical;
        }

    .btn {
        border-radius: 0; /* Remove rounded corners */
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-edit-delete {
        display: inline-block;
        margin: 5px;
    }

    .card-footer {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .add-candidate-btn {
        margin-bottom: 20px;
    }
</style>

<nav class="navbar">
    <div class="navbar-left">
        <a class="navbar-brand" href="/">
            <span>EasyVote</span>
        </a>
    </div>
    <ul class="navbar-menu" id="navbar-menu">
        <li class="navbar-item"><a href="/Admin/AdminDashBoard">Dashboard</a></li>
        <li class="navbar-item"><a href="/Account/Login">Logout</a></li>
    </ul>
</nav>

<script>
    // Toggle Navbar Menu
    document.getElementById('navbar-toggle').addEventListener('click', () => {
        const menu = document.getElementById('navbar-menu');
        menu.classList.toggle('active');
    });

    function showModal(content) {
        document.getElementById('modal-content').innerText = content;
        $('#candidateModal').modal('show');
    }
</script>

<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Party</th>
            <th>Position</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(candidate.PhotoPath))
                    {
                        <img src="@candidate.PhotoPath" alt="@candidate.Name's photo" style="width: 100px; height: 100px;" />
                    }
                </td>
                <td>@candidate.Name</td>
                <td>@candidate.Party</td>
                <td>@candidate.Position</td>
                <td>@candidate.Description</td>
                <td>
                    <a asp-action="EditCandidate" asp-route-id="@candidate.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteCandidate" asp-route-id="@candidate.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Candidate</a>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Voter Dashboard";
}


<style>
    .navbar {
        background-color: var(--primary);
    }
</style>
<nav class="navbar">
    <div class="navbar-left">
        <a class="navbar-brand" href="/">
            <span style="color:white;">Home</span>
        </a>
    </div>
    <div class="navbar-toggle" id="navbar-toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
    <ul class="navbar-menu" id="navbar-menu">
        <li class="navbar-item"><a href="/Admin/AdminDashBoard">DashBoard</a></li>
        <li class="navbar-item"><a href="/Account/Login">Logout</a></li>
        <a class="nav-link" asp-controller="Home" asp-action="Candidates">View Candidates</a>
    </ul>
</nav>
<script>
    // Toggle Navbar Menu
    document.getElementById('navbar-toggle').addEventListener('click', () => {
        const menu = document.getElementById('navbar-menu');
        menu.classList.toggle('active');
    });
</script>

<div class="dashboard">
    <div class="header">
        <h1>Welcome to the Voter Dashboard</h1>
        <p>Your voting journey starts here!</p>
    </div>

    <div class="dashboard-content">
        <!-- Elections Card -->
        <div class="card">
            <h3>Elections</h3>
            <p>View Ongoing Elections And Elections That Have Ended</p>
            <!-- Use asp-action for handling the button click -->
            <form asp-action="ViewElections" method="get">
                <button type="submit" class="btn-vote" style="border-radius:30px;">View Elections</button>
            </form>
        </div>

           <!-- Election Results Card -->
        <div class="card">
            <h3>Election Results</h3>
            <p>View Results Of The Elections That Have Ended.</p>
            <!-- Use asp-action for handling the button click -->
            <form asp-action="ReleasedElections" method="get">
                <button type="submit" class="btn-results" style="border-radius:30px;">View Results</button>
            </form>
        </div> 



       @*  <!-- Current Election Card -->
        <div class="card">
            <h3>Vote Hostory</h3>
            <p>View Your Past Votes And Keep Track Of Ur Voting History.</p>
            <!-- Use asp-action for handling the button click -->
            <form asp-action="VoteNow" method="get">
                <button type="submit" class="btn-vote" style="border-radius:30px;">View History</button>
            </form>
        </div> *@

    </div>
</div>

<style>
    .dashboard-content {
        display: flex;
        justify-content: center; /* Centers the cards horizontally */
        gap: 20px; /* Adds space between the cards */
        padding: 20px;
        flex-wrap: wrap; /* Allows cards to wrap on smaller screens */
    }

    .card {
        flex: 1 1 300px; /* Ensures the cards are responsive with a minimum size */
        max-width: 300px; /* Caps the width of each card */
    }
</style>





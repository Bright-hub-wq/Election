@model Election.ViewModel.ApplicationUserViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Confirm Deletion</h4>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-3 text-danger">Are you sure you want to delete this user?</h5>
                    <div class="user-details mb-4">
                        <h6 class="text-dark">@Model.FirstName @Model.LastName</h6>
                        <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
                    </div>
                    <form asp-action="DeleteConfirmed" asp-controller="Vote" method="post">
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                        <a asp-action="Index" asp-controller="Vote" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




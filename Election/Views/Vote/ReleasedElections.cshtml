@model List<Election.ViewModel.ElectionViewModel>

@{
    ViewData["Title"] = "Released Elections";
}

<h1 class="text-center">Released Elections</h1>

@if (!Model.Any())
{
    <p class="text-center">No elections with released results are available.</p>
}
else
{
    <div class="row">
        @foreach (var election in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@election.Title</h5>
                        <a asp-action="ViewWinner" asp-route-electionId="@election.Id" class="btn btn-primary">View Winner</a>
                    </div>
                </div>
            </div>
        }
    </div>
}


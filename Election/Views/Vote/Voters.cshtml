@model IEnumerable<Election.ViewModel.ApplicationUserViewModel>
@{
    ViewData["Title"] = "Manage Voters";
}

<h1 class="text-center mt-4">Manage Users</h1>

<div class="container mt-5">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">@user.FirstName @user.LastName</h5>
                        <p class="card-text"><strong>Email:</strong> @user.Email</p>
                        <p class="card-text"><strong>Gender:</strong> @user.Gender</p>
                        <a asp-controller="Vote" asp-action="Delete" asp-route-id="@user.UserId"
                           class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


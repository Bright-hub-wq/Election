            padding: 0 20px;
        }

        h1 {
            text-align: center;
            color: var(--primary);
            margin-bottom: 30px;
        }

        .elections-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 30px;
        }

        .card {
            background-color: var(--white);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 6px 15px var(--card-shadow);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            padding-bottom: 30px;
        }

        .card:hover {
            transform: scale(1.07);
            box-shadow: 0 12px 25px var(--card-shadow);
        }

        .card-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: var(--success);
            color: var(--white);
            padding: 8px 18px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: bold;
        }

        .card-badge.upcoming {
            background-color: var(--upcoming);
        }

        .card h2 {
            font-size: 26px;
            margin: 20px 30px 10px;
            color: var(--primary);
        }

        .card p {
            margin: 10px 30px;
            color: var(--text-dark);
            line-height: 1.6;
            font-size: 16px;
        }

        .card .btn {
            display: block;
            margin: 20px 30px;
            padding: 12px 20px;
            text-align: center;
            background-color: var(--primary);
            color: var(--white);
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .card .btn:hover {
            background-color: var(--secondary);
        }



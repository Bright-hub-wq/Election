    <style>
        :root {
            --primary: #6200ea;
            --secondary: #4b00b2;
            --white: #ffffff;
            --gray-light: #f9f9f9;
            --text-dark: #333333;
            --card-shadow: rgba(0, 0, 0, 0.15);
            --success: #4caf50;
            --upcoming: #ff9800;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--gray-light);
        }

        .container {
            max-width: 1200px;

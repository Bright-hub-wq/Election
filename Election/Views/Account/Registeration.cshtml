@model Election.ViewModel.ApplicationUserViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registration Page";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: #f7f7f7;
    }

    .container {
        position: relative;
        max-width: 800px;
        background: #fff;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

        .container header {
            font-size: 1.8rem;
            color: #333;
            font-weight: 500;
            text-align: center;
            margin-bottom: 10px;
        }

    .form {
        margin-top: 20px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .input-box {
        flex: 1 1 calc(50% - 15px);
        min-width: 200px;
    }

        .input-box label {
            color: #333;
            font-size: 0.9rem;
            margin-bottom: 5px;
            display: block;
        }

        .input-box input,
        .select-box select {
            height: 45px;
            width: 100%;
            padding: 0 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 0.9rem;
            color: #707070;
        }

            .input-box input:focus {
                border-color: #6200ea;
                box-shadow: 0 0 3px rgba(98, 0, 234, 0.2);
            }

    .flex-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
    }

    .gender-box h5 {
        margin-bottom: 8px;
    }

    .gender-option {
        display: flex;
        gap: 20px;
    }

    .gender input {
        accent-color: #6200ea;
    }

    .checkbox {
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

        .checkbox input {
            margin-right: 10px;
        }

    .button-container {
        text-align: center;
        margin-top: 20px;
    }

        .button-container button {
            width: 25%;
            height: 50px;
            border: none;
            border-radius: 25px;
            color: #fff;
            background: #6200ea;
            cursor: pointer;
            font-size: 1rem;
        }

            .button-container button:hover {
                background: #5200c8;
            }

    .form p {
        text-align: center;
    }

    .form a {
        color: #6200ea;
    }

        .form a:hover {
            text-decoration: underline;
        }
</style>

<section class="container body1">
    <header>Voter Registration</header>
    <form asp-action="Registeration" method="post" class="form" id="registrationForm">
        <div class="form-row">
            <input type="hidden" asp-for="Role" value="Voter" />

            <!-- First Name -->
            <div class="input-box">
                <label for="FirstName">First Name</label>
                <input type="text" asp-for="FirstName" placeholder="Enter first name" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="input-box">
                <label for="LastName">Last Name</label>
                <input type="text" asp-for="LastName" placeholder="Enter last name" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="input-box">
                <label for="Email">Email Address</label>
                <input type="email" asp-for="Email" placeholder="Enter email address" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="input-box">
                <label for="PhoneNumber">Phone Number</label>
                <input type="tel" asp-for="PhoneNumber" placeholder="Enter phone number" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="input-box">
                <label for="Password">Password</label>
                <input type="password" asp-for="Password" id="Password" placeholder="Enter password" required minlength="6" />
               @*  <span class="toggle-password" data-target="#Password">👁</span> *@
                <small class="text-muted">Password must be at least 6 characters long.</small>
            </div>

            <!-- Confirm Password -->
            <div class="input-box">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm password" required />
                @* <span class="toggle-password" data-target="#ConfirmPassword">👁</span> *@
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Date of Birth -->
            <div class="input-box">
                <label for="DateOfBirth">Date of Birth</label>
                <input type="date" asp-for="DateOfBirth" required />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <!-- Country -->
            <div class="input-box">
                <label for="Country">Country</label>
                <input type="text" asp-for="Country" placeholder="Enter your country" required />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <!-- Gender -->
        <div class="flex-row">
            <div class="gender-box">
                <label>Gender</label>
                <div class="gender-option">
                    <div class="gender">
                        <input type="radio" asp-for="Gender" value="Male" checked />
                        <label for="check-male">Male</label>
                    </div>
                    <div class="gender">
                        <input type="radio" asp-for="Gender" value="Female" />
                        <label for="check-female">Female</label>
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="button-container">
            <button type="submit">Register</button>
        </div>

        <p style="margin-top:12px; margin-bottom:0rem;">Already have an account? <a href="/Account/Login">Log in</a>.</p>
    </form>

            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background: #f7f7f7;
        }

        .container {
            position: relative;
            max-width: 800px;
            background: #fff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

            .container header {
                font-size: 1.8rem;
                color: #333;
                font-weight: 500;
                text-align: center;
                margin-bottom: 10px;
            }

        .form {
            margin-top: 20px;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .input-box {
            flex: 1 1 calc(50% - 15px);
            min-width: 200px;
        }

            .input-box label {
                color: #333;
                font-size: 0.9rem;
                margin-bottom: 5px;
                display: block;
            }

            .input-box input,
            .select-box select {
                height: 45px;
                width: 100%;
                padding: 0 10px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 0.9rem;
                color: #707070;
            }

                .input-box input:focus {
                    border-color: #6200ea;
                    box-shadow: 0 0 3px rgba(98, 0, 234, 0.2);
                }

        .flex-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

        .gender-box h5 {
            margin-bottom: 8px;
        }

        .gender-option {
            display: flex;
            gap: 20px;
        }

        .gender input {
            accent-color: #6200ea;
        }

        .checkbox {
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }

            .checkbox input {
                margin-right: 10px;
            }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

            .button-container button {
                width: 25%;
                height: 50px;
                border: none;
                border-radius: 25px;
                color: #fff;
                background: #6200ea;
                cursor: pointer;
                font-size: 1rem;
            }

                .button-container button:hover {
                    background: #5200c8;
                }

        .form p {
            text-align: center;
        }

        .form a {
            color: #6200ea;
        }

            .form a:hover {
                text-decoration: underline;
            }
    </style>

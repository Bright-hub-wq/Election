@model YourNamespace.ViewModels.PhoneVerificationViewModel

@{
    ViewBag.Title = "Phone Number Verification";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Confirm Verification Code</h2>
        </div>
        <div class="card-body">
            <form asp-action="VerifyPhoneNumber" method="post">
                <div class="input_box">
                    <label for="VerificationCode">Verification Code</label>
                    <input asp-for="VerificationCode" type="text" placeholder="Enter 6-Digit Code" class="form-control" maxlength="6" required />
                    <div class="icon"><i class="fas fa-key"></i></div>
                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                </div>
                <div class="button">
                    <input type="submit" value="Verify">
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Example JavaScript to handle form submissions (you can replace with your logic)
    document.querySelector("form").onsubmit = function(e) {
        e.preventDefault();
        // Basic validation (for demonstration purposes)
        let verificationCode = document.getElementById("VerificationCode").value;
        if (verificationCode.length !== 6) {
            document.getElementById("verificationCodeError").textContent = "Please enter a valid 6-digit code!";
        } else {
            document.getElementById("verificationCodeError").textContent = "";
            alert("Phone number verified successfully!");
        }
    };
</script>
